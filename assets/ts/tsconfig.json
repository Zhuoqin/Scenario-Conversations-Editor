{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "optimization": {
    "minimize": false
  },
  "exclude": [
    "node_modules"
  ]
}
